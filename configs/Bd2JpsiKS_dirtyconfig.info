; Example configuration for a ToyMC in Bd2JpsiKS

; General configuration options

; Define which components should be used and which yields should be generated.
; This defines, which other property trees are read out.
Components  
{
  Sig_Bd 
  {    
    name     "Sig_Bd"
    comp_cat 1
    yield    10000
    Model "BSig_CPV_P2VP" 
    {
      Mass {
        mean      5279.15
        width        0.
      }
      MassResol {
        bias  = 0.
        sigma = 8.
      }
      TimeAndCP {
        tau = 1.519     ; lifetime in ps
        dGamma = 0.     ; 
        dm     = 0.517  ; Deltam in hbar ps^{-1}
        Sf     = 0.7    ; 2*Im(lambda_f)/1+|lambda_f|^2
        Cf     = 0.0    ; 1-|lambda_f|/1+|lambda_f|^2
        Df     = 0.     ; 2*Re(lambda_f)/1+|lambda_f|^2
        AP     = 0.     ; production asymmetry R_Bb - R_B / R_Bb + R_B
      }
      TimeResol {
        bias  = 0.
        sigma = 0.050 
      }
      Tagging {
        eff_OS    = 0.3292
        eff_SS    = 0.0635
        eff_SSOS  = 0.0436
        w_OS      = 0.25
        w_SS      = 0.25
        dw_OS     = 0.
        dw_SS     = 0.
      }
    }
  }
  Sig_Bs 
  { 
    name     "Sig_Bs"
    comp_cat 10
    yield    0
    Model "BSig_CPV_P2VP" 
    {
      Mass {
        mean      5366.77
        width        0.
      }
      MassResol {
        bias  = 0.
        sigma = 8.
      }
      TimeAndCP {
        tau    = 1.497    ; lifetime in ps
        dGamma = 0.100    ; decay width in ps^{-1} 
        dm     = 17.69    ; Deltam in ps^{-1}
        Sf     = -0.2559  ; 2*Im(lambda_f)/1+|lambda_f|^2
        Cf     = -0.0115  ; 1-|lambda_f|/1+|lambda_f|^2
        Df     = 0.9666   ; 2*Re(lambda_f)/1+|lambda_f|^2
        AP     = 0.       ; production asymmetry R_Bb - R_B / R_Bb + R_B
      }
      TimeResol {
        bias  = 0.
        sigma = 0.050 
      }
      Tagging {
        eff_OS    = 0.3292
        eff_SS    = 0.0635
        eff_SSOS  = 0.0436
        w_OS      = 0.25
        w_SS      = 0.25
        dw_OS     = 0.
        dw_SS     = 0.
      }
    }
  }
  CombBkg
  {
    name     "CombBkg"
    comp_cat 100
    yield    0
    Model "CombBkg_NoAsym" 
    {

    }
  }
} 

; observable dimensions to be generated. Specifies their name in the TTree.
Dimensions {
  EventInfo {
    bkg_cat       "catBackground"
  }
  Mass {
    mass_true       "obsMassTrue"
    mass_meas       "obsMass"
    mass_err_true   "obsMassErrTrue"
    mass_err_meas   "obsMassErr"
  }
  Time {
    time_true       "obsTimeTrue"
    time_meas       "obsTime"
    time_err_true   "obsTimeErrTrue"
    time_err_meas   "obsTimeErr"
  }
  Tagging {
    tag_true        "obsTagTrue"
    tag_OS_meas     "obsTagOS"
    eta_OS_meas     "obsEtaOS"
    tag_SS_meas     "obsTagSS"
    eta_SS_meas     "obsEtaSS"
    tagComb_meas    "obsTagComb"
    etaComb_meas    "obsEtaComb" 
    tag_class       "catTaggedOSSSPiob"
  }
}


