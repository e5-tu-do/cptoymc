; Example configuration for a ToyMC in Bd2JpsiKS

; General configuration options

; Define which components should be used and which yields should be generated.
; This defines, which other property trees are read out.
Components  
{
  Sig_Bd 
  {    
    name     "Sig_Bd"
    comp_cat 1
    yield    10000
    Type "BSig_CPV_P2VP"
  }
  Sig_Bs 
  { 
    name     "Sig_Bs"
    comp_cat 10
    yield    0
    Type "BSig_CPV_P2VP"
  }
  Bkg
  {
    name     "Bkg"
    comp_cat 100
    yield    0
  }
} 

; observable dimensions to be generated. Specifies their name in the TTree.
Dimensions {
  EventInfo {
    bkg_cat       "catBackground"
  }
  Mass {
    mass_true       "obsMassTrue"
    mass_meas       "obsMass"
    mass_err_true   "obsMassErrTrue"
    mass_err_meas   "obsMassErr"
  }
  Time {
    time_true       "obsTimeTrue"
    time_meas       "obsTime"
    time_err_true   "obsTimeErrTrue"
    time_err_meas   "obsTimeErr"
  }
  Tagging {
    tag_true        "obsTagTrue"
    tag_OS_meas     "obsTagOS"
    eta_OS_meas     "obsEtaOS"
    tag_SS_meas     "obsTagSS"
    eta_SS_meas     "obsEtaSS"
    tagComb_meas    "obsTagComb"
    etaComb_meas    "obsEtaComb" 
    tag_class       "catTaggedOSSSPiob"
  }
}


